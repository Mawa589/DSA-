#include<iostream>				
using namespace std;				
int main()				
{				
	int arr [10];			
	int size=5;			
	int value;			
	cout<<"Enter 5 numbers for the arry"<<endl;			
	for(int i=0; i<size;i++){			
		cin>>arr[i];		
	}			
	cout<<"Enter the number to add at the end:"<<endl;			
		cin>>value;		
		for(int i=size;i>size;i++){		
			arr[i]=arr[i+1];	
		}		
		arr[5]=value;		
		size++;		
			cout<<"updated arr:";	
			for(int i=0;i<size;i++){	
				cout<<arr[i]<<endl;
			}	
			cout<<endl;	
			return 0;	
		}		
